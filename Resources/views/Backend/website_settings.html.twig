{% extends "@ContaoCore/Backend/be_page.html.twig" %}

{% block headline %}
    <span>Website-Einstellungen</span>{% if headline.sub %}<span>{{ headline.sub }}</span> {% endif %}
{% endblock %}

{% block error %}{% if error.message %}{{ error.message }}{% endif %}{% endblock %}

{% block main %}
    <div class="iido-backend-wrapper">

        <div class="tl_listing_container">

            <div class="iido-backend-container container-settings">
                {% for alias, setting in settings %}
                    <div class="container-item setting-item setting-{{ alias }}{% if setting.iconTag %} has-icon{% endif %}">
                        <a href="{{ setting.href }}"{% if not setting.iconTag and setting.icon %} style="background-image:url('{{ setting.icon }}');"{% endif %}>
                            <div class="icon">{{ setting.iconTag|raw }}</div>
                            <div class="name">{{ setting.name|raw }}</div>
                        </a>
                    </div>
                {% endfor %}
            </div>
        </div>

        <div class="copy">Icons made by <a href="https://www.freepik.com" title="Freepik" target="_blank">Freepik</a>, <a href="https://www.flaticon.com/authors/monkik" title="monkik" target="_blank">monkik</a> from <a href="https://www.flaticon.com/" title="Flaticon" target="_blank">www.flaticon.com</a></div>

    </div>
{% endblock %}
